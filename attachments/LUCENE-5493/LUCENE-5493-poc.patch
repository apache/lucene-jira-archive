+            }
+          }
+          return 0;
+        } catch (IOException e) {
+          throw new RuntimeException(e);
+        }
+      }
+    };
+    return sort(reader.maxDoc(), comparator);
+  }
+
+  @Override
+  public String getID() {
+    return sort.toString();
+  }
