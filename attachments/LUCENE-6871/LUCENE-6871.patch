+  @Override
+  public boolean equals(Object o) {
+    if (!super.equals(o))
+      return false;
+
+    SpanNotQuery other = (SpanNotQuery)o;
+    return this.include.equals(other.include)
+            && this.exclude.equals(other.exclude)
+            && this.pre == other.pre
+            && this.post == other.post;
+  }
