+  @Override
+  public int nextDoc() throws IOException {
+    doc = postings.nextDoc();
+    if (doc != NO_MORE_DOCS) {
+      freq = postings.freq();
+      assert freq >= 1;
+      count = 0;
+    }
+    position = -1;
+    return doc;
+  }
+
+  @Override
+  public int advance(int target) throws IOException {
+    assert target > doc;
+    doc = postings.advance(target);
+    if (doc != NO_MORE_DOCS) {
+      freq = postings.freq();
+      assert freq >= 1;
+      count = 0;
