+    final float boost = random().nextFloat() * 3 - 1;
+    SpanTermQuery q = new SpanTermQuery(new Term("foo", "bar"));
+    SpanBoostQuery q1 = new SpanBoostQuery(q, boost);
+    SpanBoostQuery q2 = new SpanBoostQuery(q, boost);
