+  public DirectReader(int bitsPerValue, int valueCount, IndexInput in)
+    throws IOException {
+    this.valueCount = valueCount;
+    this.bitsPerValue = bitsPerValue;
+    this.in = in;
+
+    long v = 1;
+    masks = new long[bitsPerValue];
+    for (int i = 0; i < bitsPerValue; i++) {
+      v *= 2;
+      masks[i] = v - 1;
+    }
