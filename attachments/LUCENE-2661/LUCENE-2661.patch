+      bottom = values[slot];
+    }
+
+    public int compareBottom(int doc) {                 // #12
+      float docDistance = getDistance(doc);
+      if (bottom < docDistance) return -1;              // #12
+      if (bottom > docDistance) return 1;               // #12
