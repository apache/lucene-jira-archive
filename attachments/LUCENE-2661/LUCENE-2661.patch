+  }
+
+  synchronized public IndexOutput createOutput(String name)
+    throws IOException {                                    //D
+    openOutputs.add(name);
+    report("Open Output: " + name);
+    File file = new File(getFile(), name);
+    if (file.exists() && !file.delete())
