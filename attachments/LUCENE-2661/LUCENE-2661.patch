+// From chapter 5
+public class CategorizerTest extends TestCase {
+  Map categoryMap;
+
+  protected void setUp() throws Exception {
+    categoryMap = new TreeMap();
+
+    buildCategoryVectors();
+//    dumpCategoryVectors();
