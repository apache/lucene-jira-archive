+      CustomAnalyzer customAnalyzer = (CustomAnalyzer) analyzer;
+
+      DefaultListModel<String> charFilterListModel = new DefaultListModel<>();
+      customAnalyzer.getCharFilterFactories().stream()
+          .map(f -> f.getClass().getSimpleName())
