+    if (Desktop.isDesktopSupported()) {
+      try {
+        Desktop.getDesktop().browse(link.toURI());
+      } catch (IOException | URISyntaxException e) {
+        throw new LukeException(e.getMessage(), e);
+      }
+    }
+  }
+}
