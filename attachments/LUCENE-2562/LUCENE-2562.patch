+        }
+        TermPosting posting = TermPosting.of(position, penum);
+        res.add(posting);
+      }
+
+    } catch (IOException e) {
+      throw new LukeException(String.format(Locale.ENGLISH, "Postings not available for field %s.", curField), e);
+    }
+
+    return res;
+  }
+
+
