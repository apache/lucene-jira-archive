+  public void close() {
+    if (state == null) {
+      return;
+    }
+
+    IndexUtils.close(state.reader);
+
+    state.closed = true;
+    notifyObservers();
+  }
+
+  public void reOpen() {
+    close();
+    open(state.getIndexPath(), state.getDirImpl(), state.readOnly(), state.useCompound(), state.keepAllCommits());
+  }
+
+  public LukeState getState() {
+    return state;
+  }
