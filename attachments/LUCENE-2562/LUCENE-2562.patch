+        String field = docField.getName();
+        String flags = flags(docField);
+        long norm = docField.getNorm();
+        String value = null;
+        if (docField.getStringValue() != null) {
+          value = docField.getStringValue();
+        } else if (docField.getNumericValue() != null) {
