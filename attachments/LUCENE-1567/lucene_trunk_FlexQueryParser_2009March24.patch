+    private static BooleanClause.Occur getModifierValue(QueryNode node)
+            throws QueryNodeException {
+
+        if (node instanceof ModifierQueryNode) {
+            ModifierQueryNode mNode = ((ModifierQueryNode) node);
+            switch (mNode.getModifier()) {
+                case MOD_REQ:
