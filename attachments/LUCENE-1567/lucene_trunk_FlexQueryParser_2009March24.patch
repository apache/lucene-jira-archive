+        if (query == null) {
+            throw new QueryNodeError(new MessageImpl(QueryParserMessages.PARAMETER_VALUE_NOT_SUPPORTED, "query", "null"));
+        }
+        
+        allocate();
+        setLeaf(false);
+        add(query);
