+        FieldConfig fieldConfig = getQueryConfigHandler().getFieldConfig(
+                node.getField());
+
+        if (fieldConfig != null) {
+
+            if (fieldConfig.hasAttribute(BoostAttribute.class)) {
+                float boost = ((BoostAttribute) fieldConfig.getAttribute(BoostAttribute.class)).getBoost();
