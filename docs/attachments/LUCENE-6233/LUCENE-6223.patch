+      return sumExpl;                             // eliminate wrapper
+    } else {
+      ComplexExplanation result = new ComplexExplanation(sumExpl.isMatch(),
+                                                         sum*coordFactor,
+                                                         "product of:");
+      result.addDetail(sumExpl);
+      result.addDetail(new Explanation(coordFactor,
+                                       "coord("+coord+"/"+maxCoord+")"));
+      return result;
+    }
