+  int docNum;
+  int numDocs;
+  
+  public FilteringStoredFieldsWriter(WriteFilter filter, StoredFieldsWriter original) {
+    this.filter = filter;
+    this.original = original;
+    docNum = 0;
+    numDocs = 0;
+  }
+
+  @Override
